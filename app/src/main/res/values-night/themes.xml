<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/grey_outline</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:textColorPrimary">@color/off_white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:listDivider">@drawable/divider_grey</item>
        <item name="colorTertiary">@color/ver_dark_grey</item>
        <item name="colorOnTertiary">@color/dark_grey</item>
    </style>

    <style name="AppTheme.UnitViewer" parent="AppTheme">
        <item name="backgroundColor">@color/light_grey</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>